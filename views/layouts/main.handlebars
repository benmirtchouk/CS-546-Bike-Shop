<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{page.title}}</title>
    <link rel="stylesheet" href="/css/site.css">

  </head>
  <body>
    <header>
      {{header.title}}

      <div id="auth-header">
        {{#if user}}
          <div>
            <p>{{user.firstName}}</p>
            <p>{{user.lastName}}</p>
            <a href="/user/logout">Log Out</a>
          </div>
        {{/if}}
      </div>
      {{#unless user}}
        <div id="unauth-header">
          <button class = "tabDropDown">Log in or Register</button>
          <div class="tabCollection gone">
            <div>
                <input type="radio" name="loginRegistration" class="tab" id="loginTab" checked />
                <label for="loginTab" >Log in</label>
                <div class="tabContent">
                  <form method="POST" action="user/login" id="loginForm">
                    <label>
                      Email: 
                      <input type="email" name="email" required/>
                    </label>
                      <label>
                      Password: 
                      <input type="password" name="password" required/>
                    </label>
                    <button type="submit">Log In!</button>
                  </form>
                </div>
            </div>
          
            <div>
                <input type="radio" name="loginRegistration" class="tab" id="registerTab" />
                <label for="registerTab">Register</label>
                <div class="tabContent">
                  <form method="POST" action="user/register" id="registerForm">
                    <label>
                      Email: 
                      <input type="email" name="email" required />
                    </label>
                      <label>
                      Password: 
                      <input type="password" name="password" required/>
                    </label>
                    <label>
                      Confirm Password: 
                      <input type="password" name="passwordConfirm" required/>
                    </label>
                      <label>
                      First Name: 
                      <input type="text" name="firstName" required/>
                    </label>
                    <label>
                      Last Name: 
                      <input type="text" name="lastName" required/>
                    </label>
                    <button type="submit">Register!</button>
                  </form>
                </div>
            </div>
        </div>
      </div>
    {{/unless}}
    </header>
    <div id="pageContent">
      {{{body}}}
    </div>
    {{#if footer}}
    <footer>
      {{footer.text}}
    </footer>
    {{/if}}
    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <script src="/js/loginForm.js"></script>
  </body>
</html>