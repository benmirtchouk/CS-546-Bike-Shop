<div id="reviews">
  {{#each reviews}}
    <div class="review">
      <div class="review-likes">
        {{#if user}}
          <button onclick="like('{{user._id}}', '{{_id}}')">▲</button>
        {{else}}
          <button onclick="alert('You must log in to vote')">▲</button>
        {{/if}}
        <p>{{sub likes dislikes}}</p>
        <button onclick="dislike('{{_id}}')">▼</button>
      </div>

      <div class="review-body">
        <div class="review-status">
          {{#if verified}}
            <p class="verified">Verified Purchase</p>
          {{else}}
            <p class="unverified">Unverified Purchase</p>
          {{/if}}
          <p>{{multiply rating "★"}}</p>
        </div>
        <p>{{body}}</p>
      </div>
    </div>
  {{/each}}
</div>

<script src="/js/reviews.js"/>