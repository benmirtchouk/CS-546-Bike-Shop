{{#if bikes}}
<h1>Product Offerings</h1> 

<div class="filters">
    <input type="text" id="keyword-search" placeholder="Filter Keyword"/>
    <div class="filter-tags">
        {{#each tags}}
            <label for="tag_{{replace_spaces this}}">{{this}}</label>
            <input type="checkbox" id="tag_{{replace_spaces this}}" name="{{this}}"/>
        {{/each}}
    </div>
</div>

<div class="products">
{{#each bikes}}
    <a class="productCard" href="/bikes/{{slug}}">
        <div> Name: {{name}}</div>
        <div class="productSubtitle">

            {{#if isOutOfStock}}
                <span class="stock">Temporarily out of stock </span>
            {{else if isLowStock }}
                <span class="stock lowStock">Only {{stock}} left in stock, order now!</span>
            {{else}}
                <span class="stock ">Left in Stock: {{stock}}</span>
            {{/if}} 
            <span class="price">{{price}}</span>
        </div>
        <p>Description: {{description}}</p>
        <p class="tags">Tags: {{tags}}</p>
        <span> 
            Specs:
            {{#if specs.length}}
            Length: {{specs.length}} 
            {{/if}}
            {{#if specs.width}}
            Width: {{specs.width}} 
            {{/if}}
            {{#if specs.height}}
            Height: {{specs.height}} 
            {{/if}}
            {{#if specs.frame}}
            Frame: {{specs.frame}}
            {{/if}}
            {{#if specs.fork}}
            Fork: {{specs.fork}}
            {{/if}}
            {{#if specs.shock}}
            Shock: {{specs.shock}} 
            {{/if}}
            {{#if specs.tire}}
            Tire: {{specs.tire}}
            {{/if}}
            {{#if specs.shifter}}
            Shifter: {{specs.shifter}}
            {{/if}}
            {{#if specs.chain}}
            Chain: {{specs.chain}} 
            {{/if}}

        </span>
    </a>
{{/each}}
</div>
{{else}}
{{#if user.admin}}
<p> It looks like there are no products currently. As an admin, you can either add bikes via the <a href='/admin'>Admin portal</a>, or by running the database seed task in npm</p>
{{else}}
<p> Products coming soon!</p>
{{/if}}
{{/if}}
